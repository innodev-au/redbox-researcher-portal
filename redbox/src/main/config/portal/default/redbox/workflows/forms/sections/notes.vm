#sectionHeading("Notes")
<div class="meta">
    <dl>
        <dd>
            #set($noteList = $self.getList("skos:note"))
            #if($noteList.isEmpty())
                There are no notes for this record.
            #else
                <ul>
                #foreach($key in $noteList.keySet())
                    #set($note = $noteList.get($key))
                    #set($noteDescription = $!note.get("dc:description"))
                    #set($noteCreated = $!note.get("dc:created"))
                    #set($noteName = $!note.get("foaf:name"))
                    #if("$!noteDescription"!="")
                    <li>
                    	#if("$!noteCreated"!="")
                        $self.escapeHtml($noteCreated),
                        #end
                        #if("$!noteName"!="")
                        ($self.escapeHtml($noteName))
                        #end
                        $self.escapeHtml($noteDescription)
                    </li>
                    #end
                #end
                </ul>
            #end
        </dd>
    </dl>
</div>
